<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/screen"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/screen"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/hello_Word"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageGreen" />

    <ImageButton
        android:id="@+id/imageRed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/screen"
        android:contentDescription="@string/red"
        android:onClick="onClick_rd"
        app:layout_constraintBottom_toTopOf="@+id/imageYel"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/red" />

    <ImageButton
        android:id="@+id/imageYel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/screen"
        android:contentDescription="@string/yel"
        android:onClick="onClick_yel"
        app:layout_constraintBottom_toTopOf="@+id/imageGreen"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageRed"
        app:srcCompat="@drawable/yellow" />

    <ImageButton
        android:id="@+id/imageGreen"
        android:layout_width="27dp"
        android:layout_height="24dp"
        android:background="@color/screen"
        android:contentDescription="@string/green"
        android:onClick="onClick_gr"
        app:layout_constraintBottom_toTopOf="@+id/textView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageYel"
        app:srcCompat="@drawable/green" />

</androidx.constraintlayout.widget.ConstraintLayout>